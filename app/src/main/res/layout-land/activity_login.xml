<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_page_back"
    tools:context=".Activities.LoginActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:background="@drawable/logo_iphone"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="135dp"
                android:layout_marginTop="-5dp"
                android:layout_marginRight="135dp"
                android:text="@string/username"
                android:textColor="@color/white"
                android:textSize="@dimen/phone_text_size" />

            <EditText
                android:id="@+id/edt_userName"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="135dp"
                android:layout_marginRight="135dp"
                android:background="@drawable/rounder_corner_edittext"
                android:imeOptions="flagNoExtractUi"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890 @."
                android:inputType="text"
                android:paddingStart="7dp"
                android:singleLine="true"
                android:textSize="@dimen/phone_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="135dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="135dp"
                android:text="@string/password"
                android:textColor="@color/white"
                android:textSize="@dimen/phone_text_size" />

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="135dp"
                android:layout_marginRight="135dp"
                android:background="@drawable/rounder_corner_edittext"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textPassword"
                android:paddingStart="7dp"
                android:singleLine="true"
                android:textSize="@dimen/phone_text_size" />

            <TextView
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="135dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="135dp"
                android:background="@drawable/rounded_corner"
                android:text="@string/login"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="8pt" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="150dp">
                <TextView
                    android:id="@+id/tv_forgot_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/forgot_username"
                    android:textColor="@color/white"
                    android:textSize="@dimen/phone_text_size"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:id="@+id/tv_forgot_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/forgot_pwd"
                    android:textColor="@color/white"
                    android:textSize="@dimen/phone_text_size" />
            </RelativeLayout>

            <!--<TextView
                android:id="@+id/tv_forgot_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="@string/forgot_pwd"
                android:textColor="@color/white"
                android:textSize="@dimen/phone_text_size" />-->

            <TextView
                android:id="@+id/tv_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:text="@string/help"
                android:textColor="@color/white"
                android:textSize="@dimen/phone_text_size" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>