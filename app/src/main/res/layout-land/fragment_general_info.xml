<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/measuring_point_ID"
                    android:textColor="@color/normal_text_colour"
                    android:textSize="@dimen/phone_text_size" />

                <EditText
                    android:id="@+id/edt_measuring_point_ID"
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:background="@drawable/edit_text_mandatory"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890ÆØÅæøå!@#$%^();:.,/+-_~={}[]?|£$€*§\' "
                    android:focusable="true"
                    android:imeOptions="flagNoExtractUi"
                    android:paddingStart="10dp"
                    android:paddingEnd="7dp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/normal_text_colour"
                    android:textSize="@dimen/phone_text_size"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="35dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/location_indication"
                    android:textColor="@color/normal_text_colour"
                    android:textSize="@dimen/phone_text_size"/>

                <EditText
                    android:id="@+id/edt_loc_indication"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/rounder_corner_edittext"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890ÆØÅæøå!@#$%^();:.,/+-_~={}[]?|£$€*§\' "
                    android:imeOptions="flagNoExtractUi"
                    android:paddingStart="10dp"
                    android:singleLine="true"
                    android:textColor="@color/normal_text_colour"
                    android:textSize="@dimen/phone_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/facility"
                    android:textColor="@color/normal_text_colour"
                    android:textSize="@dimen/phone_text_size" />

                <EditText
                    android:id="@+id/edt_Anlegg"
                    android:layout_width="310dp"
                    android:layout_height="35dp"
                    android:background="@drawable/rounder_corner_edittext"
                    android:inputType="textNoSuggestions"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/normal_text_colour"
                    android:textSize="@dimen/phone_text_size"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_undermappe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Sub_folder"
                    android:textColor="@color/normal_text_colour"
                    android:textSize="@dimen/phone_text_size" />

                <EditText
                    android:id="@+id/spn_subfolder"
                    android:layout_width="310dp"
                    android:layout_height="35dp"
                    android:background="@drawable/rounder_corner_edittext"
                    android:inputType="textNoSuggestions"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/normal_text_colour"
                    android:textSize="@dimen/phone_text_size"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_undermappe2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Sub_folder_2"
                    android:textColor="@color/normal_text_colour"
                    android:textSize="@dimen/phone_text_size" />

                <EditText
                    android:id="@+id/spn_subfolder2"
                    android:layout_width="310dp"
                    android:layout_height="35dp"
                    android:background="@drawable/rounder_corner_edittext"
                    android:inputType="textNoSuggestions"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/normal_text_colour"
                    android:textSize="@dimen/phone_text_size"/>
            </LinearLayout>

            <Button
                android:id="@+id/gps_button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/rounder_corner_edittext"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/start_stop_gps"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/latitude"
                        android:textColor="@color/normal_text_colour"
                        android:textSize="@dimen/phone_text_size" />

                    <TextView
                        android:id="@+id/txt_latitude"
                        android:layout_width="250dp"
                        android:layout_height="35dp"
                        android:background="@drawable/rounder_corner_edittext"
                        android:gravity="center"
                        android:paddingStart="7dp"
                        android:textColor="@color/normal_text_colour"
                        android:textSize="@dimen/phone_text_size"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/longitude"
                        android:textColor="@color/normal_text_colour"
                        android:textSize="@dimen/phone_text_size" />

                    <TextView
                        android:id="@+id/txt_longitude"
                        android:layout_width="250dp"
                        android:layout_height="35dp"
                        android:background="@drawable/rounder_corner_edittext"
                        android:gravity="center"
                        android:paddingStart="7dp"
                        android:textColor="@color/normal_text_colour"
                        android:textSize="@dimen/phone_text_size" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/altitude"
                        android:textColor="@color/normal_text_colour"
                        android:textSize="@dimen/phone_text_size" />

                    <TextView
                        android:id="@+id/txt_accuracy"
                        android:layout_width="250dp"
                        android:layout_height="35dp"
                        android:background="@drawable/rounder_corner_edittext"
                        android:gravity="center"
                        android:paddingStart="7dp"
                        android:textColor="@color/normal_text_colour"
                        android:textSize="@dimen/phone_text_size"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/accuracy"
                        android:textColor="@color/normal_text_colour"
                        android:textSize="@dimen/phone_text_size" />

                    <TextView
                        android:id="@+id/txt_accuracy_new"
                        android:layout_width="250dp"
                        android:layout_height="35dp"
                        android:background="@drawable/rounder_corner_edittext"
                        android:gravity="center"
                        android:paddingStart="7dp"
                        android:textColor="@color/normal_text_colour"
                        android:textSize="@dimen/phone_text_size" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.core.widget.NestedScrollView>
