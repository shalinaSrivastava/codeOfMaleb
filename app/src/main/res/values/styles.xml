<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#333</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="colorAccent">@color/normal_text_colour</item>-->
        <item name="colorAccent">@color/normal_text_colour</item>
        <item name="actionBarSize">36dip</item>

    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomTabText</item>
    </style>

    <style name="TabletTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabletCustomTabText</item>
    </style>

    <style name="TabletCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">9pt</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>