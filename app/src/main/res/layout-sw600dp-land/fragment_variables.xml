<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/control_performed_by"
                        android:textColor="@color/normal_text_colour"
                        android:textSize="@dimen/tab_text_size" />

                    <EditText
                        android:id="@+id/edt_control_performed_by"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:background="@drawable/rounder_corner_edittext"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890ÆØÅæøå!@#$%^();:.,/+-_~={}[]?|£$€*§\' "
                        android:imeOptions="flagNoExtractUi"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:singleLine="true"
                        android:textColor="@color/normal_text_colour"
                        android:textSize="@dimen/tab_text_size"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_weight="0.35"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date"
                        android:textColor="@color/normal_text_colour"
                        android:textSize="@dimen/tab_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/textDate"
                            android:layout_width="0dp"
                            android:layout_height="43dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounder_corner_edittext"
                            android:gravity="left|center"
                            android:paddingStart="14dp"
                            android:textColor="@color/normal_text_colour"
                            android:textSize="@dimen/tab_text_size"/>

                        <ImageView
                            android:id="@+id/iv_date_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/ic_date" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Voltage_level"
                    android:textColor="@color/normal_text_colour"
                    android:textSize="@dimen/tab_text_size" />

                <Spinner
                    android:id="@+id/spn_voltage_lvl"
                    android:layout_width="370dp"
                    android:layout_height="43dp"
                    android:background="@drawable/rounder_corner_spinner"
                    android:textColor="@color/normal_text_colour" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/electrode_system"
                    android:textColor="@color/normal_text_colour"
                    android:textSize="@dimen/tab_text_size" />

                <Spinner
                    android:id="@+id/spn_electrode_system"
                    android:layout_width="370dp"
                    android:layout_height="43dp"
                    android:background="@drawable/rounder_corner_spinner"
                    android:textColor="@color/normal_text_colour"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/global_earth"
                    android:textColor="@color/normal_text_colour"
                    android:textSize="@dimen/tab_text_size" />

                <Spinner
                    android:id="@+id/spn_global_earth"
                    android:layout_width="370dp"
                    android:layout_height="43dp"
                    android:background="@drawable/rounder_corner_spinner"
                    android:textColor="@color/normal_text_colour"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_transformer_styl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transformer_performance"
                    android:textColor="@color/normal_text_colour"
                    android:textSize="@dimen/tab_text_size" />

                <EditText
                    android:id="@+id/edt_transformer_styl"
                    android:layout_width="370dp"
                    android:layout_height="43dp"
                    android:background="@drawable/rounder_corner_edittext"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="numberDecimal"
                    android:paddingStart="15dp"
                    android:singleLine="true"
                    android:textColor="@color/normal_text_colour" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_measure_tkn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/measures_taken"
                    android:textColor="@color/normal_text_colour"
                    android:textSize="@dimen/tab_text_size" />

                <Spinner
                    android:id="@+id/spn_measures_taken"
                    android:layout_width="370dp"
                    android:layout_height="43dp"
                    android:background="@drawable/rounder_corner_spinner"
                    android:textColor="@color/normal_text_colour" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/ll_disablement"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/disablement"
                        android:textColor="@color/normal_text_colour"
                        android:textSize="@dimen/tab_text_size" />

                    <Spinner
                        android:id="@+id/spn_disablement"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:background="@drawable/rounder_corner_spinner"
                        android:textColor="@color/normal_text_colour" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_1_pole_current"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/calculated_1_pole_grounding_current"
                        android:textColor="@color/normal_text_colour"
                        android:textSize="@dimen/tab_text_size" />

                    <EditText
                        android:id="@+id/edt_calculated_pole_grnd_crnt"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:background="@drawable/rounder_corner_edittext"
                        android:imeOptions="flagNoExtractUi"
                        android:inputType="numberDecimal"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:singleLine="true"
                        android:textColor="@color/normal_text_colour"
                        android:textSize="@dimen/tab_text_size"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/humidity_level"
                    android:textColor="@color/normal_text_colour"
                    android:textSize="@dimen/tab_text_size" />

                <Spinner
                    android:id="@+id/spn_humidity_lbl"
                    android:layout_width="370dp"
                    android:layout_height="43dp"
                    android:background="@drawable/rounder_corner_spinner"
                    android:textColor="@color/normal_text_colour" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/soil"
                    android:textColor="@color/normal_text_colour"
                    android:textSize="@dimen/tab_text_size" />

                <Spinner
                    android:id="@+id/spn_soil"
                    android:layout_width="370dp"
                    android:layout_height="43dp"
                    android:background="@drawable/rounder_corner_spinner"
                    android:textColor="@color/normal_text_colour" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.core.widget.NestedScrollView>
