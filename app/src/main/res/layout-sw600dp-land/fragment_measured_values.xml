                            android:background="@drawable/rounder_corner_edittext"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="@string/show_all"
                            android:textColor="@color/normal_text_colour"
                            android:textSize="@dimen/tab_text_size" />

                        <TextView
                            android:id="@+id/show_global_earth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/rounder_corner_edittext"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="@string/show_only_global_jord"
                            android:textColor="@color/normal_text_colour"
                            android:textSize="@dimen/tab_text_size" />

                        <TextView
                            android:id="@+id/show_local_earth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/rounder_corner_edittext"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="@string/show_only_local_electrode"
                            android:textColor="@color/normal_text_colour"
                            android:textSize="@dimen/tab_text_size" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <WebView
                    android:id="@+id/globalwebview"
                    android:layout_width="match_parent"
                    android:layout_height="530dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.5"
                    tools:ignore="WebViewLayout" />

                <WebView
                    android:id="@+id/webview"
                    android:layout_width="match_parent"
                    android:layout_height="530dp"
                    android:layout_weight="0.5"
                    tools:ignore="WebViewLayout" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</androidx.core.widget.NestedScrollView>
